extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.font-bold= page

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
             form.space-y-5(method="POST" action="/auth/registro" noValidate)
                input(type="hidden" name="_csrf" value=token)
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu Nombre 
                    input#nombre.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu Email 
                    input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email" value= usuario ? usuario.email : '')
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu Password 
                    input#password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="rep_password") Repite Tu Password 
                    input#rep_password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite El Password" type="password" name="rep_password")
                div.flex.items-center.justify-between 
                    a.text-gray-500.text-xs(href="/auth/login") ¿Tienes una cuenta? Inicia Sesión
                input(class="w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")