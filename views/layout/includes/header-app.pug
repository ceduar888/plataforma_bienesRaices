header.bg-indigo-600.p-4
    div.container.mx-auto.flex.justify-between.items-center
        a(href="/inicio")
            h1.text-2xl.text-white.font-extrabold.text-center Bienes 
                span.font-normal Raices

        nav(class="my-5 text-sm md:flex md:items-center font-bold text-white md:gap-3") 
            if usuario 
                a(href="/inicio") Inicio
                a(href="/propiedades/mis-propiedades") Mis Propiedades

                form(action="/auth/cerrar-sesion" method="POST")
                    input(type="hidden" name="_csrf" value= token)
                    input(type="submit" class="bg-indigo-800 py-1 px-8 rounded-lg" value="Cerrar Sesion")
            
            else 
                a(href="/inicio") Inicio
                a(href="/auth/registro") Crear Cuenta
                a(href="/auth/login") Iniciar Sesión

div(class="bg-indigo-700 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-4 items-center")
            a(href="/categoria/1" class="text-sm font-bold uppercase text-white") Casas
            a(href="/categoria/2" class="text-sm font-bold uppercase text-white") Departamentos
            a(href="/categoria/3" class="text-sm font-bold uppercase text-white") Terrenos
            a(href="/categoria/4" class="text-sm font-bold uppercase text-white") Cabañas
            a(href="/categoria/5" class="text-sm font-bold uppercase text-white") Fincas

        form(action="/buscador" method="POST" class="flex gap-3 items-center")
            input(type="hidden" name="_csrf" value= token )
            label(for="termino" class="text-sm uppercase font-bold text-white") Búsqueda
            input(type="text" id="termino" name="termino" placeholder="Buscar Propiedades" class="text-sm p-2 rounded-lg shadow")

            input(type="submit" class="bg-indigo-800 hover:bg-indigo-400 rounded-lg text-white uppercase font-bold p-2 cursor-pointer text-sm" value="Buscar")
            